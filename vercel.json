{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "web/dist",
    "installCommand": "echo 'Skipping root install - handled in build'",
    "framework": null,
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/poker/:path*",
            "destination": "/api"
        },
        {
            "source": "/auth/:path*",
            "destination": "/api"
        },
        {
            "source": "/api-docs/:path*",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}
  