{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true
    },
    "include": ["src/**/*.ts", "src/**/*.spec.ts", "scripts/**/*.ts"],
    "exclude": ["node_modules"]
}
